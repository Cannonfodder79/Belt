@model Belt.Models.RegValidator
<div class="container">
    <div class="half">
    <h2>Register</h2>
    <form asp-action="Register" asp-controller="Home" method="post">
        Username: <input class="form-control" asp-for="Username"> <span asp-validation-for="Username"></span><br><br>
        Password: <input class="form-control" asp-for="Password"> <span asp-validation-for="Password"></span><br><br>
        Confirm Password: <input class="form-control" asp-for="Confirm"> <span asp-validation-for="Confirm"></span><br><br>
        First name: <input class="form-control" asp-for="FirstName"> <span asp-validation-for="FirstName"></span><br><br>
        Last name: <input class="form-control" asp-for="LastName"> <span asp-validation-for="LastName"></span><br><br>
        <button class="btn btn-info">Register</button>
    </form>
    </div>